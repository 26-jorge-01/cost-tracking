{
  "name": "AI Spark",
  "image": "nm-platform-starter",
  "workspaceFolder": "/app",

  // 1) Bind‑mount de tu código y de data/
  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/data,target=/app/data,type=bind,consistency=cached"
  ],

  // 2) Puertos a exponer
  "forwardPorts": [8888, 8000, 2222],

  // 3) Extensiones VS Code
  "extensions": [
    "ms-python.python",
    "ms-toolsai.jupyter"
  ],

  // 4) Ajustes para que VSCode use el intérprete de uv (.venv)
  "settings": {
    "python.defaultInterpreterPath": "/app/.venv/bin/python"
  },

  // 5) (Opcional) Al iniciar, sincroniza datos y dependencias
  "postStartCommand": "uv sync"
}
